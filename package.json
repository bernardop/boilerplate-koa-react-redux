{
  "name": "boilerplate-koa-react-redux",
  "version": "1.0.0",
  "description": "A boilerplate for a Koa React Redux application with Webpack, Mocha and SASS",
  "main": "index.js",
  "scripts": {
    "webserver": "node api/src/server.js",
    "test": "node_modules/.bin/mocha --compilers js:babel-core/register --require ./tests/test_helper.js 'tests/**/*.@(js|jsx)'",
    "test:watch": "npm run test -- --watch",
    "build": "node_modules/.bin/webpack",
    "dev": "node_modules/.bin/webpack-dev-server",
    "lint": "eslint . --ext .js --ext .jsx",
    "deploy": "NODE_ENV=production node_modules/.bin/webpack -p"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bernardop/boilerplate-koa-react-redux.git"
  },
  "keywords": [
    "boilerplate",
    "koa",
    "redux",
    "react",
    "webpack",
    "mocha",
    "sass"
  ],
  "author": "Bernardo Pacheco",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bernardop/boilerplate-koa-react-redux/issues"
  },
  "homepage": "https://github.com/bernardop/boilerplate-koa-react-redux#readme",
  "dependencies": {
    "babel-core": "^6.3.15",
    "babel-loader": "^6.2.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-1": "^6.3.13",
    "bookshelf": "^0.9.1",
    "css-loader": "^0.23.0",
    "history": "^1.13.1",
    "html-webpack-plugin": "^1.7.0",
    "immutable": "^3.7.5",
    "isomorphic-fetch": "^2.2.0",
    "knex": "^0.9.0",
    "koa": "^1.1.2",
    "koa-cors": "0.0.16",
    "koa-route": "^2.4.2",
    "mysql": "^2.9.0",
    "node-sass": "^3.4.2",
    "react": "^0.14.3",
    "react-dom": "^0.14.3",
    "react-redux": "^4.0.0",
    "react-router": "^1.0.2",
    "redux": "^3.0.4",
    "redux-thunk": "^1.0.0",
    "sass-loader": "^3.1.2",
    "style-loader": "^0.13.0",
    "webpack": "^1.12.9"
  },
  "devDependencies": {
    "babel-eslint": "^5.0.0-beta6",
    "babel-plugin-react-transform": "^2.0.0-beta1",
    "chai": "^3.4.1",
    "chai-immutable": "^1.5.3",
    "eslint": "^1.10.3",
    "eslint-loader": "^1.1.1",
    "eslint-plugin-react": "^3.11.3",
    "jsdom": "^7.2.0",
    "mocha": "^2.3.4",
    "react-transform-hmr": "^1.0.1",
    "redux-devtools": "^2.1.5",
    "webpack-dev-server": "^1.14.0"
  }
}
